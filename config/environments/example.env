# AIOps Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================
ENVIRONMENT=development
LOG_LEVEL=debug
DEBUG=true
PORT=8080

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://aiops_user:aiops_password@localhost:5432/aiops_platform
POSTGRES_DB=aiops_platform
POSTGRES_USER=aiops_user
POSTGRES_PASSWORD=aiops_password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=aiops_redis_password

# =============================================================================
# KAFKA CONFIGURATION
# =============================================================================
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=aiops-platform

# =============================================================================
# AI/ML API KEYS
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-integration-key

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_PREDICTIVE_ANALYSIS=true
FEATURE_AUTO_REMEDIATION=true
FEATURE_COMPLIANCE_AUTOMATION=true 